{
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"env": {
		"node": true,
		"es6": true,
		"browser": true
	},
	"globals": {
		"require": true,
		"module": true,
		"exports": true
	},
	"rules": {
		"semi": 2,
		"no-cond-assign": [
			2,
			"except-parens"
		],
		"curly": [
			2,
			"all"
		],
		"no-debugger": 2,
		"eqeqeq": 2,
		"no-eq-null": 2,
		"no-eval": 2,
		"guard-for-in": 2,
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-use-before-define": 2,
		"linebreak-style": [
			2,
			"unix"
		],
		"new-cap": 2,
		"no-caller": 2,
		"no-irregular-whitespace": 2,
		"no-empty": [
			2,
			{
				"allowEmptyCatch": true
			}
		],
		"no-new": 0,
		"valid-typeof": 2,
		"no-plusplus": 0,
		"strict": [
			1,
			"safe"
		],
		"dot-notation": 2,
		"no-undef": 2,
		"no-unused-vars": 2,
		"no-script-url": 2,
		"no-var": 2,
		"space-before-blocks": [
			2,
			"always"
		],
		"wrap-iife": 2,
		"space-before-function-paren": [
			2,
			"never"
		],
		"one-var": [
			2,
			"never"
		],
		"array-bracket-spacing": [
			2,
			"never",
			{
				"objectsInArrays": true,
				"arraysInArrays": true
			}
		],
		"space-in-parens": [
			2,
			"never"
		],
		"comma-style": [
			2,
			"last"
		],
		"no-multi-spaces": 2,
		"space-unary-ops": [
			2,
			{
				"words": false,
				"nonwords": false
			}
		],
		"key-spacing": [
			2,
			{
				"beforeColon": false,
				"afterColon": true
			}
		],
		"no-with": 2,
		"no-mixed-spaces-and-tabs": 2,
		"no-trailing-spaces": [
			2
		],
		"comma-dangle": [
			2,
			"never"
		],
		"brace-style": 2,
		"eol-last": 2,
		"newline-after-var": [
			2,
			"always"
		],
		"no-multi-str": 2,
		"yoda": [
			2,
			"never"
		],
		"no-multiple-empty-lines": 2,
		"arrow-spacing": [
			2,
			{
				"before": true,
				"after": true
			}
		],
		"arrow-body-style": [
			2,
			"as-needed"
		],
		"newline-before-return": 2,
		"use-isnan": 2,
		"no-unreachable": 2,
		"no-unexpected-multiline": 2,
		"no-regex-spaces": 2,
		"no-obj-calls": 2,
		"no-negated-in-lhs": 2,
		"no-invalid-regexp": 2,
		"no-inner-declarations": [2, "both"],
		"no-func-assign": 2,
		"no-extra-semi": 2,
		"no-extra-boolean-cast": 2,
		"no-ex-assign": 2,
		"no-empty-character-class": 2,
		"no-duplicate-case": 2,
		"no-dupe-keys": 2,
		"no-dupe-args": 2,
		"no-control-regex": 2,
		"comma-dangle": [
			"error", "never"
		],
		"prefer-template": 0,
		"prefer-spread": 2,
		"prefer-const": 2,
		"prefer-const": [
			2,
			{
				"destructuring": "any"
			}
		],
		"no-this-before-super": 2,
		"no-const-assign": 2,
		"no-path-concat": 2,
		"no-new-require": 2,
		"no-use-before-define": 2,
		"radix": 2,
		"no-useless-escape": 2,
		"no-useless-concat": 2,
		"no-useless-call": 2,
		"no-throw-literal": 2,
		"no-sequences": 2,
		"no-self-compare": 2,
		"no-return-assign": 2,
		"no-new-wrappers": 2,
		"no-native-reassign": 2,
		"no-multi-str": 2,
		"no-loop-func": 2,
		"no-implicit-coercion": 0,
		"no-extend-native": 2,
		"no-extra-bind": 2,
		"no-case-declarations": 2,
		"dot-location": [
			"error",
			"property"
		],
		"handle-callback-err": 2,
		"callback-return": 0,
		"no-octal": 2,
		"no-floating-decimal": 2,
		"no-empty-function": [
			2,
			{
				"allow": ["functions", "arrowFunctions"]
			}
		],
		"no-lonely-if": 2,
		"no-new-object": 2,
		"no-spaced-func": 2,
		"no-unneeded-ternary": 2,
		"one-var-declaration-per-line": 2,
		"space-before-function-paren": [
			2,
			"never"
		],
		"space-infix-ops": [
			2,
			{
				"int32Hint": false
			}
		],
		"prefer-rest-params": 2,
		"no-extra-parens": [
			2,
			"functions"
		],
		"quotes": [
			2,
			"double", {
				"allowTemplateLiterals": true
			}
		]
	}
}
